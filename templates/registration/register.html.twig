{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center my-5">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body">
                        <h1 class="card-title text-center">S'enregistrer</h1>

                        {{ form_errors(registrationForm) }}

                        {{ form_start(registrationForm, {'attr': {'class': 'mt-4'}}) }}

                            <div class="form-group">
                                {{ form_label(registrationForm.nom, null, {'label_attr': {'class': 'form-label'}}) }} <!-- Label avec classe Bootstrap pour le nom -->
                                {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }} <!-- Widget avec classe Bootstrap pour le nom -->
                            </div>

                            <div class="form-group">
                                {{ form_label(registrationForm.prenom, null, {'label_attr': {'class': 'form-label'}}) }} <!-- Label avec classe Bootstrap pour le prénom -->
                                {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }} <!-- Widget avec classe Bootstrap pour le prénom -->
                            </div>

                            <div class="form-group">
                                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group form-check my-3">
                                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>

                            <button type="submit" class="btn btn-primary btn-block my-3">S'enregistrer</button>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
