{% extends 'base.html.twig' %}

{% block title %}
    Modifier tache
{% endblock %}

{% block body %}
<div class="container animate__animated animate__fadeIn">
    <h1 class="my-4">Modifier tache</h1>

    <div class="card card-body bg-light my-4 px-5 py-4 animate__animated animate__fadeIn">
        {{ include('taches/_form.html.twig', {
            'button_label': 'Mettre à jour',
            'button_class': 'btn btn-success animate__animated animate__bounceIn'
        }) }}
    </div>

    <a class="btn btn-secondary mt-3 animate__animated animate__fadeInLeft" href="{{ path('app_taches_index') }}">
    <i class="fas fa-arrow-left mr-2"></i>
        Retour à la liste
    </a>

    <div class="mt-3 animate__animated animate__fadeInRight">
        {{ include('taches/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
