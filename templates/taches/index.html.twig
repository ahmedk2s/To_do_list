{% extends 'base.html.twig' %}

{% block title %}Index des Taches{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-4">Index des Taches</h1>

    <div class="row mb-4">
        <div class="col-sm-4">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total de Tâches</h5>
                    <p class="card-text">{{ total_taches }}</p>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Tâches en Cours</h5>
                    <p class="card-text">{{ taches_en_cours }}</p>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Tâches Terminées</h5>
                    <p class="card-text">{{ taches_terminees }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between mb-4">
        <div class="btn-group" role="group">
            <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Trier par
            </button>
            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                <a class="dropdown-item" href="{{ path('app_taches_index', {'sort': 'date'}) }}">Date</a>
                <a class="dropdown-item" href="{{ path('app_taches_index', {'sort': 'priorite'}) }}">Priorité</a>
            </div>
        </div>

        <div class="btn-group" role="group">
            <button id="btnGroupDrop2" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Filtrer par statut
            </button>
            <div class="dropdown-menu" aria-labelledby="btnGroupDrop2">
                <a class="dropdown-item" href="{{ path('app_taches_index', {'statut': 'a faire'}) }}">A faire</a>
                <a class="dropdown-item" href="{{ path('app_taches_index', {'statut': 'en cours'}) }}">En cours</a>
                <a class="dropdown-item" href="{{ path('app_taches_index', {'statut': 'terminée'}) }}">Terminée</a>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Date</th>
                    <th scope="col">Priorite</th>
                    <th scope="col">Statut</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for tach in taches %}
                <tr>
                    <td>{{ tach.titre }}</td>
                    <td>{{ tach.description }}</td>
                    <td>{{ tach.date|date('d-m-Y') }}</td>
                    <td>{{ tach.priorite }}</td>
                    <td>{{ tach.statut }}</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="{{ path('app_taches_show', {'id': tach.id}) }}">Voir</a>
                        <a class="btn btn-sm btn-secondary" href="{{ path('app_taches_edit', {'id': tach.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center text-muted">Aucune tache enregistrée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation d-flex justify-content-center mt-3">
    {{ knp_pagination_render(taches) }}
</div>
    </div>

    {% if app.user %}
        <div class="d-flex justify-content-end mb-3">
            <a class="btn btn-danger" href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <div class="d-flex justify-content-end">
        <a class="btn btn-success" href="{{ path('app_taches_new') }}">Créer taches</a>
    </div>
</div>
{% endblock %}
