{% extends 'base.html.twig' %}

{% block title %}Taches{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Taches</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th scope="row">Titre</th>
                    <td>{{ tach.titre }}</td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>{{ tach.description }}</td>
                </tr>
                <tr>
                    <th scope="row">Date</th>
                    <td>{{ tach.date|date('d-m-Y') }}</td>
                </tr>
                <tr>
                    <th scope="row">Priorite</th>
                    <td>{{ tach.priorite }}</td>
                </tr>
                <tr>
                    <th scope="row">Statut</th>
                    <td>{{ tach.statut }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex flex-column align-items-end">
            <a class="btn btn-primary mb-2 align-self-end" href="{{ path('app_taches_edit', {'id': tach.id}) }}">Modifier une tache</a>
            <div class="align-self-end">{{ include('taches/_delete_form.html.twig') }}</div>
        </div>

        <a class="btn btn-secondary mb-2" href="{{ path('app_taches_index') }}">Retour Ã  la liste</a>
    </div>
{% endblock %}
